<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical" >
     <RelativeLayout
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="40dip"
	    android:background="#699f00"
	    >
	    <Button 
	        android:id="@+id/datach"
	        android:layout_width="20dip"
	        android:layout_height="20dip"
	        android:layout_marginLeft="20dp"
	        android:layout_marginTop="10dp"
	        android:background="@drawable/jiantou"
	        android:onClick="goBack"
	        />
    <TextView 
        android:id="@+id/a_head"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"        
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="上下限报警"/>
    </RelativeLayout>
	<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="#ffffff"
        android:orientation="vertical"
        >
    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="40dip"
	        android:layout_marginLeft="10dip"
	        android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
	        	android:layout_height="30dip"
	        	android:layout_marginLeft="10dip"
	        	android:text="是否报警："
	        	android:textSize="16sp"
	        	android:layout_marginTop="5dip"
	        	android:textColor="#585858"
	        	android:gravity="center"
                ></TextView>
            <RadioGroup 
                android:layout_width="wrap_content"
	        	android:layout_height="30dip"
	        	android:layout_marginLeft="10dip"
	        	android:layout_marginTop="5dip"
	        	android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/sx_yes" 
                    android:layout_width="35dip"
	        		android:layout_height="30dip"
                    />
                <TextView
                android:layout_width="wrap_content"
	        	android:layout_height="30dip"
	        	android:layout_marginLeft="2dip"
	        	android:text="是"
	        	android:textSize="16sp"
	        	android:textColor="#585858"
	        	android:gravity="center"
                ></TextView>
                 <RadioButton 
                     android:id="@+id/sx_no"
                    android:layout_width="35dip"
	        		android:layout_height="30dip"
	        		android:layout_marginLeft="20dip"
                    />
                 <TextView
                android:layout_width="wrap_content"
	        	android:layout_height="30dip"
	        	android:layout_marginLeft="2dip"
	        	android:text="否"
	        	android:textSize="16sp"
	        	android:textColor="#585858"
	        	android:gravity="center"
                ></TextView>
            </RadioGroup>
            <!-- <CheckBox 
                android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
                android:tag="moban"
                android:textColor="#484848"
          		android:textSize="15sp"
                android:text="是"
                />
             <CheckBox 
                android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
                android:tag="moban"
                android:textColor="#484848"
          		android:textSize="15sp"
          		android:layout_marginLeft="10dip"
                android:text="否"
                /> -->
        </LinearLayout>
        <View 
                android:layout_width="match_parent"
		        android:layout_height="1dip"
		        android:background="#dcdcdc"/>
        <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="40dip"
	        android:layout_marginLeft="10dip"
	        android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
	        	android:layout_height="30dip"
	        	android:layout_marginLeft="10dip"
	        	android:text="最低间隔时间："
	        	android:textSize="16sp"
	        	android:layout_marginTop="5dip"
	        	android:gravity="center"
	        	android:textColor="#585858"
                ></TextView>
            <EditText
                android:id="@+id/e_method"
                android:layout_width="50dip"
	        	android:layout_height="38dip"
	        	android:layout_marginLeft="10dip"
	        	android:layout_marginTop="6dip"
	        	android:hint=""
	        	android:phoneNumber="true"
	        	android:textSize="16sp"
	        	android:textColor="#585858"
                ></EditText>
             <TextView
	                android:layout_width="wrap_content"
		        	android:layout_height="30dip"
		        	android:layout_alignParentRight="true"
		        	android:layout_marginRight="20dip"
		        	android:text="分钟"
		        	android:textSize="16sp"
		        	android:layout_marginTop="10dip"
		        	android:textColor="#585858"
		        	android:gravity="right"
	                ></TextView>
           <RelativeLayout 
		        android:layout_width="match_parent"
		        android:layout_height="40dip"
		        >
	            <TextView
	                android:layout_width="match_parent"
		        	android:layout_height="30dip"
		        	android:layout_alignParentRight="true"
		        	android:layout_marginRight="20dip"
		        	android:text="*"
		        	android:textSize="16sp"
		        	android:layout_marginTop="10dip"
		        	android:textColor="#585858"
		        	android:gravity="right"
	                ></TextView>
            </RelativeLayout>
        </LinearLayout>
       </LinearLayout>
     <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="30dip"
	        android:layout_marginLeft="10dip"
	        android:layout_marginTop="20dip"
	        android:layout_marginRight="10dip"
	        android:orientation="horizontal">
         <LinearLayout android:layout_width="fill_parent"
                android:layout_height="30dip"
                android:gravity="center"
                android:background="#DBDBDB"
                android:orientation="horizontal">
                <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:gravity="center"
	                android:layout_weight="1"
	                android:text="@string/chuanganqi"
	                android:textColor="@android:color/black"
	                android:textSize="18.0sp" />
	
	            
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:gravity="center"
	                android:layout_weight="1"
	                android:text="@string/xxz"
	                android:textColor="@android:color/black"
	                android:textSize="18.0sp" />
	           
	
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:gravity="center"
	                android:layout_weight="1"
	                android:text="@string/sxz"
	                android:textColor="@android:color/black"
	                android:textSize="18.0sp" />
            </LinearLayout> 
            
            <com.mobile.publiclass.CornerListView 
                android:id="@+id/listview2"
	            android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:layout_marginTop="5dip"
		        android:layout_marginLeft="15dp"
		        android:layout_marginRight="15dp"
		        android:background="@drawable/shape_bg_listview"
		        android:cacheColorHint="@null"
	        />
        </LinearLayout>   
	
     <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="30dip"
	        android:layout_marginLeft="60dip"
	        android:layout_marginTop="25dip"
	        android:layout_marginRight="60dip"
	        android:background="#ffe4e1"
	        android:orientation="horizontal">
			<TextView 
			    android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:layout_marginLeft="20dip"
	            android:layout_marginTop="5dip"
	        	android:text="*  为必填项"
	        	android:textSize="16sp"
	        	android:textColor="#585858"
	    />
	 </LinearLayout>
	 <Button 
	     android:layout_width="match_parent"
	        android:layout_height="45dip"
	        android:layout_marginLeft="40dip"
	        android:layout_marginTop="10dip"
	        android:layout_marginRight="40dip"
	        android:text="完    成"
	        android:background="#699f00"
	        android:textSize="18sp"
	        android:textColor="#ffffff"
	     />
</LinearLayout>
