<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f1f1f1"
     >
    <RelativeLayout
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="40dip"
	    android:background="#699f00"
	    >
	    <Button 
	        android:id="@+id/datach"
	        android:layout_width="20dip"
	        android:layout_height="20dip"
	        android:layout_marginLeft="20dp"
	        android:layout_marginTop="10dp"
	        android:background="@drawable/jiantou"
	        android:onClick="goBack"
	        />
    <TextView 
        android:id="@+id/a_head"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"        
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="关于报警"/>
    </RelativeLayout>
    
    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="150dip"
        android:gravity="center"
        android:layout_marginTop="10dip"
        android:orientation="vertical">
        <ImageView 
	        android:layout_width="80dip"
	        android:layout_height="80dip"
	        android:background="#000000"
        />
        <TextView
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:text="短信报警"
	        android:textSize="16dip"
            android:textColor="#585858"
            android:layout_marginTop="5dip"
            />
      </LinearLayout> 
        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffffff"
            android:orientation="vertical">
            <TextView android:id="@+id/about_w1"
                android:layout_width="fill_parent"
                android:layout_marginTop="20dip"
                
                android:textSize="16dip"
                android:textColor="#585858"
                android:text="@string/about_mrtx"
                android:layout_height="wrap_content"/>
            <TextView android:id="@+id/about_w2"
                android:layout_width="fill_parent"
                android:layout_marginTop="5dip"
                
                android:textSize="16dip"
                android:textColor="#585858"
                android:text="@string/about_ssbj"
                android:layout_height="wrap_content"/>
            <TextView android:id="@+id/about_w3"
                android:layout_width="fill_parent"
                android:layout_marginTop="5dip"
                
                android:textSize="16dip"
                android:textColor="#585858"
                android:text="@string/about_hsyj"
                android:layout_height="wrap_content"/>
            <TextView android:id="@+id/about_w4"
                android:layout_width="fill_parent"
                android:layout_marginTop="5dip"
                
                android:textSize="16dip"
               android:textColor="#585858"
                android:text="@string/about_qsbj"
                android:layout_height="wrap_content"/>
            
        </LinearLayout>   
	       
       
        
            
        
    
    

</LinearLayout>
