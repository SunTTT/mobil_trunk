<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
         android:layout_width="fill_parent"            
         android:layout_height="fill_parent"
         
         android:scrollbars="horizontal"
         android:id="@+id/popup_windowId"
        android:background="@drawable/bg"
         android:orientation="vertical">          
     
       <LinearLayout android:id="@+id/chart_title"
            android:layout_width="fill_parent"
            android:layout_weight="0.1"
            android:layout_height="65dip"
            
            android:gravity="center_vertical" 
            android:orientation="vertical" >

            <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="30dip"
	            android:gravity="center_horizontal"
	             android:orientation="horizontal" >
	            <TextView
	                android:id="@+id/chart_stationName"
	                android:layout_width="wrap_content"
		            android:layout_height="25dip"
		            android:layout_marginLeft="10dip"
		            android:layout_marginTop="10dip"
		            android:textColor="@color/black"
		            android:textSize="35px"
		            android:focusable="true"
		            android:ellipsize="marquee"
		            android:singleLine="true"
		            android:marqueeRepeatLimit="marquee_forever"
		            android:focusableInTouchMode="true"
		            android:layout_weight="0.4"
		            android:gravity="center"
	                />
				
		 </LinearLayout>
         <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip" >

                <TextView
                    android:id="@+id/chart_date"
                    android:layout_width="80dip"
                    android:layout_height="25dip"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.4"
                    android:gravity="center"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/data_time2"
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="0.4"
                    android:background="@drawable/head_pic02"
                    android:gravity="center"
                    android:textColor="@color/black" />
				<TextView
		             android:id="@+id/ch_station3"
		             android:layout_width="25dip"
		             android:layout_height="25dip"
		             android:layout_alignParentLeft="true"
		             android:layout_marginLeft="45dip"
		             android:background="@drawable/head_pic01" />
                <LinearLayout
                    android:layout_width="100dip"
                    android:layout_height="30dip"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="96dp"
                    android:layout_toLeftOf="@+id/data_time2"
                    android:background="@drawable/chart_exit"
                    android:paddingRight="2dip" >

                    <Spinner
                        android:id="@+id/chart_spinner"
                        android:layout_width="95dip"
                        android:layout_height="25dip"
                        android:layout_marginTop="2dip"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="2dip"
                        android:background="@drawable/spinner3"
                        android:prompt="@string/sensor_prompt" />
                </LinearLayout>

            </RelativeLayout>
           
        </LinearLayout>
        
     
        <LinearLayout android:id="@+id/layout1"
           android:orientation="horizontal"
           android:layout_weight="10"
           android:layout_marginTop="5dip"
           android:background="#ffffff"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_marginBottom="0dip">
           
       </LinearLayout> 
</LinearLayout>  <!-- From: file:/D:/mobile_farming_trunk2/app/src/main/res/layout/chartlist.xml -->