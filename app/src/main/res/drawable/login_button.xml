<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="false" android:drawable="@color/login_button">
    <shape>
        <corners android:radius="30dp"/>
        <stroke android:color="#2b648f"/>
        <solid android:color="@color/login_button"/>

    </shape>
</item>
    <item android:state_pressed="true" android:drawable="@color/login_button_press">
        <shape>
            <corners android:radius="30dp"/>
            <stroke android:color="#2b648f"/>
            <solid android:color="@color/login_button_press"/>
        </shape>
    </item>
</selector>