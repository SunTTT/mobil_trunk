<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
         android:layout_width="fill_parent"            
         android:layout_height="fill_parent"
         android:background="@drawable/bg_m"
         android:scrollbars="horizontal"
         android:id="@+id/popup_windowId"
         >          
      <LinearLayout android:id="@+id/bottom_linear"
	        android:layout_width="fill_parent"
	        android:layout_height="50dip" 
	        android:layout_marginTop="10dip"
	        android:orientation="horizontal"	        
	        android:layout_marginLeft="20dip"
          	android:layout_marginRight="20dip" 
	        android:background="#FFFFAA"
	        android:layout_alignParentTop="true">
      		<TextView android:layout_width="wrap_content"
          				android:layout_height="wrap_content"
          				android:layout_gravity="center"
          				android:textColor="#000000"
          				android:layout_marginLeft="10dip"
				        android:textSize="18dip" 
				        android:text="欢迎您进入 --"
          				android:id="@+id/title_domain_name"/>
      		<!-- author 季怀魁  2012-4-6 --><!-- begin -->
      		<TextView android:id="@+id/title_stationname"
      		    android:layout_width="wrap_content"
      		    android:layout_height="wrap_content"
      		    android:textColor="#000000"
      		    android:layout_gravity="center"/>
      		<!-- end -->
	        <TextView android:layout_width="wrap_content"
          				android:layout_height="wrap_content"
          				android:layout_gravity="center"          				
          				android:textColor="#000000"
				        android:textSize="18dip" 
          				android:text="@string/site_str"/>
      </LinearLayout>
    
      <ListView android:layout_width="fill_parent"
          		android:layout_height="wrap_content"
          		android:id="@+id/site_list"
          		android:layout_marginTop="20dip"
          		android:layout_marginLeft="20dip"
          		android:layout_marginRight="20dip" 
          		android:cacheColorHint="#00000000"
          		android:fadingEdge="none"
          		android:layout_below="@id/bottom_linear"
          		android:background="#6fFFFFFF">
          		
          
      </ListView>
      
         
</RelativeLayout>  