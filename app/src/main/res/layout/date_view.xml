<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"	
	android:gravity="center"
	android:background="@drawable/downbutton_corner"
	android:layout_height="fill_parent">

	<TableRow
	    android:layout_width="fill_parent"
	    android:gravity="center"
	    android:layout_height="wrap_content" >
		<TextView android:layout_height="wrap_content"
		    	  android:layout_width="wrap_content"
		    	  android:textSize="25dip"
		    	  android:gravity="center"
		    	  android:text="起始:"/>	 
		<DatePicker android:id="@+id/satartdatepicker"
			android:layout_height="wrap_content" android:layout_width="wrap_content"></DatePicker>
		
	</TableRow>
	<TableRow
	    android:layout_width="fill_parent"
	    android:gravity="center"
	    android:layout_height="wrap_content" >
		<TextView android:layout_height="wrap_content"
		    	  android:layout_width="wrap_content"/>
		<TimePicker android:id="@+id/starttime_picker"
		android:layout_height="wrap_content" android:layout_width="wrap_content"></TimePicker>
	</TableRow>
	<TableRow
	    android:layout_width="fill_parent"
	     android:gravity="center"
	     android:layout_marginTop="5dip"
	    android:layout_height="wrap_content" >
		<TextView android:layout_height="wrap_content"
		    	  android:layout_width="wrap_content"
		    	  android:textSize="25dip"
		    	  android:gravity="center"
		    	  android:text="终止:"/>	
		<DatePicker android:id="@+id/enddatepicker"
			android:layout_height="wrap_content" android:layout_width="wrap_content"></DatePicker>
		
	</TableRow>
	<TableRow
	    android:layout_width="fill_parent"
	    android:gravity="center"
	    android:layout_height="wrap_content" >
		<TextView android:layout_height="wrap_content"
		    	  android:layout_width="wrap_content"/>
		<TimePicker android:id="@+id/endtimepicker"
		android:layout_height="wrap_content" android:layout_width="wrap_content"></TimePicker>
	</TableRow>	
	<Button android:layout_width="wrap_content"
				    	android:layout_height="wrap_content"
				    	android:id="@+id/search"
				    	android:layout_marginTop="10dip"
				    	android:paddingTop="10dip"
				    	android:paddingLeft="30dip"
				    	android:paddingRight="30dip"
				    	android:textSize="30dip"
		    	  		android:gravity="center"
				    	android:text="查询"/>	    	 	    
	
</LinearLayout>
