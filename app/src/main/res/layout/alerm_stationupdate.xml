<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical" >
     <RelativeLayout
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="40dip"
	    android:background="#699f00"
	    >
	    <Button 
	        android:id="@+id/datach"
	        android:layout_width="20dip"
	        android:layout_height="20dip"
	        android:layout_marginLeft="20dp"
	        android:layout_marginTop="10dp"
	        android:background="@drawable/jiantou"
	        android:onClick="goBack"
	        />
    <TextView 
        android:id="@+id/a_head"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"        
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="编辑站点信息"/>
    </RelativeLayout>
    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="40dip"
	        android:background="#ffffff"
	        android:layout_marginTop="10dip"
	        android:layout_marginLeft="10dip"
	        android:layout_marginRight="10dip"
	        android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
	        	android:layout_height="30dip"
	        	android:layout_marginLeft="10dip"
	        	android:text="站点"
	        	android:textSize="16sp"
	        	android:layout_marginTop="5dip"
	        	android:gravity="center"
	        	android:textColor="#585858"
                ></TextView>
            <LinearLayout 
                android:id="@+id/up_station"
		        android:layout_width="match_parent"
		        android:layout_height="40dip"
		        android:gravity="right"
		        android:layout_marginRight="10dip"
		        android:orientation="horizontal">
		         <TextView
		             android:id="@+id/up_province"
	                android:layout_width="wrap_content"
		        	android:layout_height="30dip"
		        	android:layout_marginRight="10dip"
		        	android:text="河南省"
		        	android:textSize="16sp"
		        	android:layout_marginTop="10dip"
		        	android:textColor="#585858"
		        	android:gravity="right"
	                ></TextView>
		         <TextView
		             android:id="@+id/up_stationname"
	                android:layout_width="wrap_content"
		        	android:layout_height="30dip"
		        	android:layout_marginRight="10dip"
		        	android:text="Hbynx01"
		        	android:textSize="16sp"
		        	android:layout_marginTop="10dip"
		        	android:textColor="#585858"
		        	android:gravity="right"
	                ></TextView>
		         <TextView
		             android:id="@+id/up_stationid"
		             android:visibility="gone"
	                android:layout_width="wrap_content"
		        	android:layout_height="30dip"
		        	android:layout_marginRight="10dip"
		        	android:text="23"
		        	android:textSize="16sp"
		        	android:layout_marginTop="10dip"
		        	android:textColor="#585858"
		        	android:gravity="right"
	                ></TextView>
		         <TextView
	                android:layout_width="wrap_content"
		        	android:layout_height="30dip"
		        	android:layout_marginRight="10dip"
		        	android:text="*"
		        	android:textSize="16sp"
		        	android:layout_marginTop="10dip"
		        	android:textColor="#585858"
		        	android:gravity="right"
	                ></TextView>
            </LinearLayout>
        </LinearLayout>
	<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="#ffffff"
        android:orientation="vertical"
        >
         <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="40dip"
	        android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
	        	android:layout_height="30dip"
	        	android:layout_marginLeft="10dip"
	        	android:text="短信发送间隔"
	        	android:textSize="16sp"
	        	android:layout_marginTop="5dip"
	        	android:textColor="#585858"
	        	android:gravity="center"
                ></TextView>
             <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="40dip"
	        android:gravity="right"
	        android:layout_marginRight="10dip"
	        android:orientation="horizontal">
             <EditText
                android:id="@+id/up_inval"
                android:layout_width="50dip"
	        	android:layout_height="38dip"
	        	android:layout_marginRight="5dip"
	        	android:layout_marginTop="6dip"
	        	android:hint=""
	        	android:phoneNumber="true"
	        	android:textSize="16sp"
	        	android:textColor="#585858"
                ></EditText>
             <TextView
	                android:layout_width="wrap_content"
		        	android:layout_height="30dip"
		        	android:layout_marginRight="10dip"
		        	android:text="分钟"
		        	android:textSize="16sp"
		        	android:layout_marginTop="10dip"
		        	android:textColor="#585858"
		        	android:gravity="right"
	                ></TextView>
             <TextView
		             android:id="@+id/add_stationid"
	                android:layout_width="wrap_content"
		        	android:layout_height="30dip"
		        	android:layout_marginRight="10dip"
		        	android:text="*"
		        	android:textSize="16sp"
		        	android:layout_marginTop="10dip"
		        	android:textColor="#585858"
		        	android:gravity="right"
	                ></TextView>
             </LinearLayout>
        </LinearLayout>
        <View 
                android:layout_width="match_parent"
		        android:layout_height="1dip"
		        android:background="#dcdcdc"/>
         <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="40dip"
	        android:layout_marginLeft="10dip"
	        android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
	        	android:layout_height="30dip"
	        	android:text="短信发送方式"
	        	android:textSize="16sp"
	        	android:layout_marginTop="5dip"
	        	android:textColor="#585858"
	        	android:gravity="center"
                ></TextView>
            <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="40dip"
	        android:gravity="right"
	        android:layout_marginRight="24dip"
	        android:orientation="horizontal">
            <TextView
                android:id="@+id/up_mess"
                android:layout_width="50dip"
	        	android:layout_height="30dip"
	        	android:layout_marginLeft="5dip"
	        	android:text="短信"
	        	android:textSize="16sp"
	        	android:gravity="center"
	        	android:layout_marginTop="5dip"
	        	android:textColor="#585858"
	        	android:background="#699f00"
                ></TextView>
             <TextView
                android:id="@+id/up_yuyin"
                android:layout_width="50dip"
	        	android:layout_height="30dip"
	        	android:text="语音"
	        	android:gravity="center"
	        	android:textSize="16sp"
	        	android:layout_marginRight="10dip"
	        	android:layout_marginTop="5dip"
	        	android:textColor="#585858"
	        	android:background="#dcdcdc"
                ></TextView>
             </LinearLayout>
        </LinearLayout>
        <View 
                android:layout_width="match_parent"
		        android:layout_height="1dip"
		        android:background="#dcdcdc"/>
         <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="40dip"
	        android:layout_marginLeft="10dip"
	        android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
	        	android:layout_height="30dip"
	        	android:text="短信发送次数"
	        	android:textSize="16sp"
	        	android:layout_marginTop="5dip"
	        	android:textColor="#585858"
	        	android:gravity="center"
                ></TextView>
             <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="40dip"
	        android:gravity="right"
	        android:layout_marginRight="10dip"
	        android:orientation="horizontal">
             <EditText
                android:id="@+id/up_total"
                android:layout_width="50dip"
	        	android:layout_height="38dip"
	        	android:layout_marginRight="5dip"
	        	android:layout_marginTop="6dip"
	        	android:hint=""
	        	android:phoneNumber="true"
	        	android:textSize="16sp"
	        	android:textColor="#585858"
                ></EditText>
             <TextView
	                android:layout_width="wrap_content"
		        	android:layout_height="30dip"
		        	android:layout_marginRight="10dip"
		        	android:text="次"
		        	android:textSize="16sp"
		        	android:layout_marginTop="10dip"
		        	android:textColor="#585858"
		        	android:gravity="right"
	                ></TextView>
             <TextView
		             android:id="@+id/add_stationid2"
	                android:layout_width="wrap_content"
		        	android:layout_height="30dip"
		        	android:layout_marginRight="10dip"
		        	android:text="*"
		        	android:textSize="16sp"
		        	android:layout_marginTop="10dip"
		        	android:textColor="#585858"
		        	android:gravity="right"
	                ></TextView>
             </LinearLayout>
        </LinearLayout>
     </LinearLayout>
     <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="30dip"
	        android:layout_marginLeft="60dip"
	        android:layout_marginTop="25dip"
	        android:layout_marginRight="60dip"
	        android:background="#ffe4e1"
	        android:orientation="horizontal">
			<TextView 
			    android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:layout_marginLeft="20dip"
	            android:layout_marginTop="5dip"
	        	android:text="*  为必填项"
	        	android:textSize="16sp"
	        	android:textColor="#585858"
	    />
	 </LinearLayout>
	 <Button 
	     android:layout_width="match_parent"
	        android:layout_height="45dip"
	        android:layout_marginLeft="40dip"
	        android:layout_marginTop="10dip"
	        android:layout_marginRight="40dip"
	        android:text="完    成"
	        android:background="#699f00"
	        android:textSize="18sp"
	        android:textColor="#ffffff"
	        android:onClick="Complete"
	     />
</LinearLayout>
