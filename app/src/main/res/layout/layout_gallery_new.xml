<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white1" >
    
    <LinearLayout 
        android:id="@+id/pig_title"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@color/blue"
		android:gravity="center_vertical"
		android:orientation="vertical">

        <RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="55dp"
			android:layout_below="@+id/data_title"
			android:layout_marginTop="5dip"
			android:background="@color/blue">

			<TextView
	             android:id="@+id/ch_station2"
				android:layout_width="40dip"
				android:layout_height="40dip"
				android:layout_alignParentLeft="true"
				android:layout_alignTop="@+id/data_time"
				android:layout_marginLeft="10dp"
				android:background="@drawable/back_pic" />
	        <TextView
	            android:id="@+id/data_time"
				android:layout_width="40dip"
				android:layout_height="40dip"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginRight="10dip"

				android:background="@drawable/data_pic"
				android:gravity="center"
				android:textColor="@color/black" />

		</RelativeLayout>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="40dip"
			android:background="@color/white1">
			<TextView android:id="@+id/pig_stationname"
				android:layout_width="wrap_content"
				android:layout_height="25dip"
				android:layout_centerHorizontal="true"
				android:gravity="center"
				android:paddingTop="4dp"
				android:singleLine="true"
				android:textColor="@color/station_name_color"
				android:textSize="25px"
				/>
			<TextView
				android:id="@+id/pig_date"
				android:layout_width="80dip"
				android:layout_height="25dip"
				android:layout_alignParentBottom="true"
				android:layout_alignParentRight="true"
				android:layout_marginRight="16dp"
				android:layout_below="@id/pig_stationname"
				android:textColor="@color/station_name_color" />
		</RelativeLayout>

    </LinearLayout>
    
    <LinearLayout android:id="@+id/gridview_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="8dip"
        android:orientation="vertical">
        <View  android:layout_height="3px" 
           android:layout_width="match_parent"
            android:background="@color/blue"
        />

        <GridView android:id="@+id/girdview_png"
            android:layout_width="fill_parent" 			
		 	android:layout_height="fill_parent">
            
        </GridView>
    </LinearLayout>

</LinearLayout>